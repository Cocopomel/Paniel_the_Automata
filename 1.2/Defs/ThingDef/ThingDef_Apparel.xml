      <useWornGraphicMask>true</useWornGraphicMask>
      <layers>
        <li>OnSkin</li>
        <li>Middle</li>
      </layers>
      <tags>
        <li>Paniel_Basic</li>
      </tags>
      <defaultOutfitTags>
        <li>PNApparel</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>(255,255,255)</only>
