  <RulePackDef>
    <defName>DeityTypeMaker_PnLindistry</defName>
    <rulePack>
      <rulesStrings>
        <li>r_deityType->God of Capitalism</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>

  <RulePackDef>
    <defName>LeaderTitleMaker_PnLindistry</defName>
    <rulePack>
      <rulesStrings>
        <li>r_leaderTitle->CEO</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>
