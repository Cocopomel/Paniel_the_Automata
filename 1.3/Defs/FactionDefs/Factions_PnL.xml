          <Villager>5</Villager>
          <Town_Guard>10</Town_Guard>
          <Grenadier_Destructive>1.5</Grenadier_Destructive>
          <Mercenary_Slasher>7</Mercenary_Slasher>
          <Mercenary_Gunner>10</Mercenary_Gunner>
          <Mercenary_Elite>10</Mercenary_Elite>
          <Town_Councilman>10</Town_Councilman>
        </options>
      </li>
      <li>
        <kindDef>Peaceful</kindDef>
        <options>
          <Villager>20</Villager>
          <Town_Guard>10</Town_Guard>
          <Town_Councilman>10</Town_Councilman>
        </options>
      </li>
    </pawnGroupMakers>
    <settlementTexturePath>Icon/Paniel_PlayerIcon</settlementTexturePath>
  </FactionDef>

  <ThingSetMakerDef>
    <defName>PN_SubsidiaryRaidLootMaker</defName>
    <root Class="ThingSetMaker_MarketValue">
      <fixedParams>
        <filter>
          <thingDefs>
            <li>Silver</li>
            <li>MedicineIndustrial</li>
            <li>ComponentIndustrial</li>
            <li>MealSurvivalPack</li>
            <li>Neutroamine</li>
          </thingDefs>
        </filter>
      </fixedParams>
    </root>
  </ThingSetMakerDef>

  <RulePackDef>
    <defName>NamerSettlementPnLSub</defName>
    <rulePack>
      <rulesStrings>
        <li>r_name->logistics center</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>

