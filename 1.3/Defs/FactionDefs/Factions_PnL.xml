        <tag>Urban</tag>
        <baseWeight>1</baseWeight>
        <weightFactor>1</weightFactor>
      </li>
      <li>
        <tag>NoBeard</tag>
        <baseWeight>1</baseWeight>
        <weightFactor>1</weightFactor>
      </li>
      <li>
        <tag>NoTattoo</tag>
        <baseWeight>1</baseWeight>
        <weightFactor>1</weightFactor>
      </li>
    </styleItemTags>
  </CultureDef>

  <RulePackDef>
    <defName>NamerIdeo_PnLindistry</defName>
    <rulePack>
      <rulesStrings>
        <li>r_ideoName->PnL bylaws</li>
        <li>r_ideoAdjective->PnL</li>
        <li>r_memberName->PnL Employee</li>
