          <PN_GrenadeUnit_Destructive>2</PN_GrenadeUnit_Destructive>

          <PN_Mid_ClosetUnit>2</PN_Mid_ClosetUnit>
          <PN_Mid_RangeUnit>6</PN_Mid_RangeUnit>

          <PN_EliteCloseUnit>2</PN_EliteCloseUnit>
