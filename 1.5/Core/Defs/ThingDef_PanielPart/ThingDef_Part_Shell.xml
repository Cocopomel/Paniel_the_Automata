<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--재질 선택 가능하게 및 등급있음-->
  <!--급조/일반/정찰/헤비-->
  <!--일반기준:플레이트아머-->

  <ThingDef Name="PN_PartItemBase_Shell" ParentName="PN_PartItemBase" Abstract="True">
    <stackLimit>1</stackLimit>
    <statBases>
      <Mass>1</Mass>
    </statBases>
    <thingCategories>
      <li>PN_PartC_Shell</li>
    </thingCategories>
    <comps>
      <li>
        <compClass>CompQuality</compClass>
      </li>
    </comps>
  </ThingDef>

  <!--급조-->

  <ThingDef ParentName="PN_PartItemBase_Shell">
    <defName>PN_ATModule_BaseShell</defName>
    <label>paniel makeshift shell</label>
    <description>.</description>

    <modExtensions>
      <li Class="ModuleAutomata.AutomataModuleThingExtension">
        <hediffs>
          <Normal>PN_BaseShell</Normal>
        </hediffs>
        <parts>
          <li>PN_Shell</li>
        </parts>
      </li>
    </modExtensions>
  </ThingDef>

  <HediffDef ParentName="AddedBodyPartBase">
    <defName>PN_BaseShell</defName>
    <label>base makeshift shell</label>
    <description>.</description>

    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.6, 0.6, 1.0)</defaultLabelColor>
    <stages>
      <li>
        <statOffsets>
          <ArmorRating_Sharp>0.1</ArmorRating_Sharp>
          <ArmorRating_Blunt>0.1</ArmorRating_Blunt>
          <ArmorRating_Heat>0.1</ArmorRating_Heat>
        </statOffsets>
      </li>
    </stages>

    <isBad>false</isBad>
    <priceImpact>true</priceImpact>
    <allowMothballIfLowPriorityWorldPawn>true</allowMothballIfLowPriorityWorldPawn>
  </HediffDef>

  <!--일반-->

  <ThingDef ParentName="PN_PartItemBase_Shell">
    <defName>PN_ATModule_HandiShell</defName>
    <label>paniel handicraft shell</label>
    <description>.</description>

    <modExtensions>
      <li Class="ModuleAutomata.AutomataModuleThingExtension">
        <hediffs>
          <Awful>PN_HandiShell_awlf</Awful>
          <Poor>PN_HandiShell_poor</Poor>
          <Normal>PN_HandiShell_norm</Normal>
          <Good>PN_HandiShell_good</Good>
          <Excellent>PN_HandiShell_exc</Excellent>
          <Masterwork>PN_HandiShell_mast</Masterwork>
          <Legendary>PN_HandiShell_legd</Legendary>
        </hediffs>
        <parts>
          <li>PN_Shell</li>
        </parts>
      </li>
    </modExtensions>
  </ThingDef>

  <HediffDef Name="PN_PartItem_Shell" ParentName="AddedBodyPartBase" Abstract="True">
    <description>.</description>

    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.6, 0.6, 1.0)</defaultLabelColor>

    <isBad>false</isBad>
    <priceImpact>true</priceImpact>
    <allowMothballIfLowPriorityWorldPawn>true</allowMothballIfLowPriorityWorldPawn>
  </HediffDef>

